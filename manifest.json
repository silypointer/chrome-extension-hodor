{
    "manifest_version": 3,
    "name": "Hodor",
    "description": "Hold the door",
    "version": "0.1.2",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["jquery-3.5.1.min.js", "content.js"],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_icon": "hodor.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}